<h1>Listing pkgs</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Desc</th>
    <th>Maintainer</th>
    <th>Repo</th>
  </tr>

<% for pkg in @pkgs %>
  <tr>
    <td><%=h pkg.name %></td>
    <td><%=h pkg.desc %></td>
    <td><%=h pkg.maintainer %></td>
    <td><%=h pkg.repo %></td>
    <td><%= link_to 'Show', pkg %></td>
    <td><%= link_to 'Edit', edit_pkg_path(pkg) %></td>
    <td><%= link_to 'Destroy', pkg, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New pkg', new_pkg_path %>
